{
    "pandoc.htmlOptString": "--citeproc --biblio=research/.pandoc/literature.bib --csl=research/.pandoc/apa.csl --template=research/.pandoc/template.html --toc",
    "code-runner.executorMapByFileExtension": {
        ".md": 
        "cd $dir && pandoc $fileName -o $fileNameWithoutExt.html --citeproc --biblio=research/.pandoc/literature.bib --csl=research/.pandoc/apa.csl --template=research/.pandoc/template.html --css=research/.pandoc/template.css --toc && open $fileNameWithoutExt.html"
    }
}