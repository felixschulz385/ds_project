{
    "pandoc.htmlOptString": "--citeproc --biblio=.pandoc/literature.bib --csl=.pandoc/apa.csl --template=.pandoc/template.html --toc",
    "code-runner.executorMapByFileExtension": {
        ".md": "cd $dir && pandoc $fileName -o $fileNameWithoutExt.html --citeproc --biblio=.pandoc/literature.bib --csl=.pandoc/apa.csl --template=.pandoc/template.html --css=.pandoc/template.css --toc && open $fileNameWithoutExt.html"
    }
}